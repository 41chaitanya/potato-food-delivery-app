# ============================================================================
# ENVIRONMENT VARIABLES FOR MICROSERVICES - PRODUCTION READY
# ============================================================================
# Copy this file to .env and update values for your environment
# ============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_POOL_SIZE=10
DB_MIN_IDLE=5

# =============================================================================
# SERVICE DISCOVERY (EUREKA)
# =============================================================================
EUREKA_URI=http://localhost:8761/eureka
EUREKA_ENABLED=true

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# IMPORTANT: Change this secret in production!
JWT_SECRET=your_production_jwt_secret_key_at_least_256_bits_long_change_this
JWT_EXPIRATION=86400000

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Set to 'simple' for local testing without Redis
# Set to 'redis' for production (default)
SPRING_CACHE_TYPE=redis

# =============================================================================
# KAFKA CONFIGURATION (for notification-service)
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# =============================================================================
# PAYMENT CONFIGURATION
# =============================================================================
# Success rate for simulated payment gateway (0.0 to 1.0)
# Default: 0.95 (95% success rate)
# Set to 1.0 for testing (100% success)
PAYMENT_SUCCESS_RATE=0.95
